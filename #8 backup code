#include <stdio.h>

int main(int argc, const char * argv[])
{

    char a[3][10];
    strcpy(a[0], "connect");
    printf("Length of first string: %d\n", strlen(a[0]));
    
    strcpy(a[1], " the dots");
    printf("Length of second string: %d\n", strlen(a[1]));
    
    strcpy(a[2], ", captain.");
    printf("Length of three string: %d\n", strlen(a[2]));
    
    int len_before_combine = strlen(a[0]) + strlen(a[1]) + strlen(a[2]);
    
    int len = sizeof(a)/sizeof(a[0]);

    for (int i = 1; i < len; i++) {
        strcat(a[0], a[i]);
    }
    
    printf("Combined String: %s\n", a[0]);
    printf("Length of combined string: %d\n", strlen(a[0]));
    
    if (strlen(a[0]) == len_before_combine) {
        printf("Yes, the length of final combined string matches the length of initial individual strings added at %d\n", strlen(a[0]));
    }
    
    return 0;
}

